        // } else {

        // }

    }
    function popcomment() {
        document.getElementById('cmt-box').style.display = "block";
        return false;
    }
    let clk = 1;
    function emoji() {
        // var clk = document.getElementById('emojiclk')
        if (!clk == 0) {
            document.getElementById('emoji').style.display = "block";
            clk = 0;

        } else {
            console.log("in else ..");
            document.getElementById('emoji').style.display = "none";
