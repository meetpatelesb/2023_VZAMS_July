<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous" />
</head>
<link rel="stylesheet" href="css/home.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />

<link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<link rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" />


<link rel="stylesheet" href="https://unicons.iconscout.com/release/v3.0.6/css/line.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
<script type="module" src="https://cdn.jsdelivr.net/npm/emoji-picker-element@^1/index.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>

<body>
    <div class="container">
        <!-- sidebar  started--------------------------------------------- -->

        <div></div>
        <aside class="left-side">
            <div class="left-navbar">
                <div>
                    <div class="twitter-img menu">
                        <img src="assets/twitter.png" class="twitter-icon" />
                    </div>
                    <div class="menu">
                        <a href="/">
                            <div>
                                <i class="bi bi-house-door-fill"></i>
                                <span>Home</span>
                            </div>
                        </a>
                    </div>
                    <div class="menu">
                        <a href="">
                            <div>
                                <i class="bi bi-hash"></i>
                                <span>Explore</span>
                            </div>
                        </a>
                    </div>
                    <div class="menu">
                        <a href="">
                            <div>
                                <i class="bi bi-bell-fill"></i>
                                <span>Notifications</span>
                            </div>
                        </a>
                    </div>
                    <div class="menu">
                        <a href="">
                            <div>
                                <i class="bi bi-reception-4"></i>
                                <span>Twitter Blue</span>
                            </div>
                        </a>
                    </div>
                    <div class="menu">
                        <a href="">
                            <div>
                                <i class="bi bi-person-fill"></i>
                                <span>Profile</span>
                            </div>
                        </a>
                    </div>
                    <div class="menu">
                        <a href="">
                            <div>
                                <i class="bi bi-three-dots"></i>
                                <span>More</span>
                            </div>
                        </a>
                    </div>

                    <button class="tweet-btn">Tweet</button>

                    <div class="profile-btn">
                        <div class="left-clm">
                            <img src="assets/proflieimg.jpg" class="profile-img" />
                        </div>
                        <div class="right-clm">
                            <div>
                                <strong>Meet Vaghasiya</strong>
                                <span class="tag">@Meet_patel07</span>
                            </div>
                        </div>
                        <div class="pro-more">
                            <a href="">
                                <div><i class="bi bi-three-dots"></i></div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </aside>

        <!-- sidebar  ended--------------------------------------------- -->

        <!-- content main------------------------------------------------->
        <section class="content">
            <div class="static-name">
                <span>Home</span>
            </div>
            <div class="title">
                <!-- first tweet start -->
                <form action="/tweet" method="post" enctype="multipart/form-data">
                    <div class="tweet">
                        <div class="left-clm">
                            <img src="assets/proflieimg.jpg" class="profile-img" />
                        </div>
                        <div class="right-clm">
                            <div class="tweet-area">
                                <textarea name="tweet_text" id="tweet-text" cols="36" rows="5" maxlength="150"
                                    placeholder="What's Happening ?" onkeydown="maxim()" fixed></textarea>
                                <p id="error-max" class="error"></p>
                                <div>
                                    <label for="tweet-img">
                                        <i class="bi bi-card-image"> </i>
                                    </label>
                                    <input type="file" id="tweet-img" name="image" accept="image/*"
                                        style="display: none; " />
                                    <input type="submit" value="Tweet" class="tweet-a" id="tweetBtn">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- first tweet end -->

                <!-- tweet showings    -->

                <%for(j=0;j<tweets.length;j++){%>

                    <div class="tweets">
                        <div class="left-clm">
                            <img src="assets/proflieimg.jpg" class="profile-img" />
                        </div>
                        <div class="right-clm">
                            <div>
                                <strong id="">Meet Vaghasiya</strong>
                                <span class="tag">@Meet_patel07</span>
                                <a href="">
                                    <i class="bi bi-three-dots"></i>
                                </a>

                                <div class="tweets-area">
                                    <p class="tweet-text" id="tweet-text">
                                        <%=tweets[j].tweet_content%>
                                    </p>
                                    <%if(tweets[j].tweet_image){%>
                                        <img src="upload/<%=tweets[j].tweet_image%>" class="tweet-img">
                                        <%}%>

                                            <div class="like-icons">
                                                <div class="icon">
                                                    <%=tweets[j].tweet_id%>
                                                        <a onclick="popcomment()" class="fa fa-reply" id="reply"></a>
                                                        <div class="modal" id="cmt-box">
                                                            <div class="modal-dialog">
                                                                <div class="modal-content">
                                                                    <div class="modal-header">
                                                                        <h5 class="modal-title">Type your Reply..</h5>
                                                                    </div>
                                                                    <form action="/comment" method="post">
                                                                        <div class="modal-body">
                                                                            <textarea class="cmt" id="cmt"
                                                                                placeholder="typing.." name="cmt"></textarea>
                                                                        </div>
                                                                        <div class="modal-footer">
                                                                            <div class="btn1">
                                                                                <a class="fa fa-heart" id="emojiclk"
                                                                                    onclick="emoji()"></a>
                                                                                <emoji-picker style="display: none;"
                                                                                    id="emoji"></emoji-picker>
                                                                            </div>
                                                                            <div>
                                                                                <div class="btn2">
                                                                                    <!-- <a class="btn btn-secondary" id="close" onclick="close()">Close</a> -->
                                                                                    <input type="submit" value="Comment"
                                                                                        id="comment"
                                                                                        class="btn btn-primary"
                                                                                        onclick="savecomment()"></input>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <span class="reply-count" id="reply-count">1000</span>
                                                </div>
                                                <div class="icon">
                                                    <a href="" class="fa fa-heart" id="like"></a>
                                                    <span class="like-count" id="like-count">1000</span>
                                                </div>
                                                <div class="icon">
                                                    <a href="" class="fa fa-retweet" id="retweet"></a>
                                                    <span class="retweet-count" id="retweet-count">1000</span>
                                                </div>
                                            </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%for(k=0;k<comments.length;k++){%>
                    <div class="comments">
                        <div class="left-clm">
                            <img src="assets/proflieimg.jpg" class="profile-img" />
                        </div>
                        <div class="right-clm">
                            <div>
                                <strong id="">Meet Vaghasiya</strong>
                                <span class="tag">@Meet_patel07</span>
                                <a href="">
                                    <i class="bi bi-three-dots"></i>
                                </a>

                                <div class="tweets-area">
                                    <p class="tweet-text" id="tweet-text">
                                        <%=comments[k].comment_content%>
                                    </p>
                                    <%if(comments[k].tweet_image){%>
                                        <img src="upload/<%=tweets[j].tweet_image%>" class="tweet-img">
                                        <%}%>
                                </div>
                            </div>
                        </div>
                    </div>
                    <%}%>
                    <%}%>


            </div>
        </section>

        <!----------------------------------------------content main ended-->

        <!----rigth-side started---------------------------------------------------->
        <aside class="right-side">
            <div class="search-bar">

                <div><i class="bi bi-search"></i></div>
                <input class="search" placeholder="Search Tweets" id="search-text" onchange="search()" />

            </div>

            <div id="search_pro">

                <!-- <div class="profile-btn-s">
                    <div class="left-clm-s">
                        <img src="/assets/proflieimg.jpg" class="profile-img-s" />
                    </div>
                    <div class="right-clm-s">
                        <div>
                            <strong>Meet Vaghasiya</strong>
                            <span class="tag">@Meet_patel07</span>
                        </div>
                    </div>
                    <div class="follow-btn-s">
                        <a class="follow-a" href="">Follow</a>
                    </div>
                </div> -->

            </div>
        </aside>

        <!-----rigth -side ended---------------------------------->
    </div>
</body>
<script type="text/javascript">
    async function search() {
        document.getElementById('search_pro').innerHTML = '';

        var searchText = document.getElementById('search-text').value;
        var search_pro = document.getElementById('search_pro').innerHTML;

        console.log(searchText);
