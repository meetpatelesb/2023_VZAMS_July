        <!-- sidebar  ended--------------------------------------------- -->

        <!-- content main------------------------------------------------->
        <section class="content">
            <div class="static-name">
                <span>Home</span>
            </div>
            <div class="title" id="tweet">
                <!-- first tweet start -->
                <form action="/tweet" method="post" enctype="multipart/form-data">
                    <div class="tweet">
                        <div class="left-clm">
                            <img src="/assets/proflieimg.jpg" class="profile-img" />
                        </div>
                        <div class="right-clm">
                            <div class="tweet-area">
                                <textarea name="tweet_text" id="tweet-text" cols="44" rows="5" placeholder="What's Happening ?" onkeyup="maxim()" fixed></textarea>
                                <p id="error-max" class="error"></p>
                                <div>
                                    <label for="tweet-img">
                                    <i class="bi bi-card-image"     > </i>
                                    </label>
                                    <input type="file" id="tweet-img" name="image" accept="" style="display: none; " />
                                    <input type="submit" value="Tweet" class="tweet-a" id="tweetBtn">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- first tweet end -->

                <!-- tweet showings    -->

                <%for(j=0;j<tweets.length;j++){%>

                    <div class="tweets">
                        <div class="left-clm">
                            <img src="/assets/proflieimg.jpg" class="profile-img" />
                        </div>
                        <div class="right-clm">
                            <div>
                                <strong id="">Meet Vaghasiya</strong>
                                <span class="tag">@Meet_patel07</span>
                                <a href="">
                                    <i class="bi bi-three-dots"></i>
                                </a>

                                <div class="tweets-area">
                                    <p class="tweet-text" id="tweet-text">
                                        <%=tweets[j].tweet_content%>
                                    </p>
                                    <%if(tweets[j].tweet_image){%>
                                        <img src="/upload/<%=tweets[j].tweet_image%>" class="tweet-img">
                                        <%}else if(tweets[j].tweet_video){%>
                                            <video controls>
                                                <source src="/upload/<%=tweets[j].tweet_video%>" type="video/mp4" class="tweet-video">
                                              </video>

                                            <%}%>

                                                <div class="like-icons">
                                                    <div class="icon">
                                                        <%=tweets[j].tweet_id%>
                                                            <a href="javascript:void(0)" class="fa fa-reply" id="reply" onclick="like('<%=tweets[j].tweet_id%>')"></a>
                                                            <span class="reply-count" id="reply-count">1000</span>
                                                    </div>
                                                    <div class="icon">
                                                        <a href="javascript:void(0)" class="fa fa-heart" id="like" onclick="like()"></a>
                                                        <span class="like-count" id="like-count">1000</span>
                                                    </div>
                                                    <div class="icon">
                                                        <a href="javascript:void(0)" class="fa fa-retweet" id="retweet"></a>
                                                        <span class="retweet-count" id="retweet-count">1000</span>
                                                    </div>
                                                </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <%}%>
            </div>
        </section>

        <!----------------------------------------------content main ended-->

