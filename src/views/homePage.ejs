<body>
    <div class="container">
        <!-- sidebar  started--------------------------------------------- -->

        <div></div>
        <aside class="left-side">
            <div class="left-navbar">
                <div>
                    <div class="twitter-img menu">
                        <img src="/assets/twitter.png" class="twitter-icon" />
                    </div>
                    <div class="menu">
                        <a href="">
                            <div>
                                <i class="bi bi-house-door-fill"></i>
                                <span>Home</span>
                            </div>
                        </a>
                    </div>
                    <div class="menu">
                        <a href="">
                            <div>
                                <i class="bi bi-hash"></i>
                                <span>Explore</span>
                            </div>
                        </a>
                    </div>
                    <div class="menu">
                        <a href="">
                            <div>
                                <i class="bi bi-bell-fill"></i>
                                <span>Notifications</span>
                            </div>
                        </a>
                    </div>
                    <div class="menu">
                        <a href="/tweet_blue/tblue">
                            <div>
                                <i class="bi bi-reception-4"></i>
                                <span>Twitter Blue</span>
                            </div>
                        </a>
                    </div>
                    <div class="menu">


                        <%let username = '';
                       
 for (i=1;i<userName[0].user_username.length;i++){
username += ''+userName[0].user_username[i];     
 }
 %>
                            <a href="/user/<%= username%>">
                                <div>
                                    <i class="bi bi-person-fill"></i>
                                    <span>Profile</span>
                                </div>
                            </a>

                            <div class="menu">
                                <a href="/tweet_logout/logout">
                                    <div>
                                        <i class="bi bi-three-dots"></i>
                                        <span>Logout</span>
                                    </div>
                                </a>
                            </div>

                            <button class="tweet-btn">Tweet</button>

                            <div class="profile-btn">
                                <div class="left-clm">
                                    <img src="/assets/proflieimg.jpg" class="profile-img" />
                                </div>
                                <div class="right-clm">
                                    <div>
                                        <strong>
                                    <%=userName[0].user_name%>
                                </strong>
                                        <span class="tag">
                                    <%=userName[0].user_username%>
                                </span>
                                    </div>

                                    <span></span>
                                </div>
                                <div class="pro-more">
                                    <a href="">
                                        <div><i class="bi bi-three-dots"></i></div>
                                    </a>
                                </div>
                            </div>
                    </div>
                </div>
        </aside>

        <!-- sidebar  ended--------------------------------------------- -->

        <!-- content main------------------------------------------------->
        <section class="content">
            <div class="static-name">
                <span>Home</span>
            </div>
            <div class="title" id="tweet_top">
                <!-- first tweet start -->
                <form action="/tweet" method="post" enctype="multipart/form-data">
                    <div class="tweet">
                        <div class="left-clm">
                            <img src="/assets/proflieimg.jpg" class="profile-img" />
                        </div>
                        <div class="right-clm">
                            <div class="tweet-area">
                                <textarea name="tweet_text" id="tweet-text" cols="36" rows="5" placeholder="What's Happening ?" onkeydown="maxim()" fixed></textarea>
                                <p id="error-max" class="error"></p>
                                <div>
                                    <label for="tweet-img">
                                        <i class="bi bi-card-image"> </i>
                                    </label>
                                    <input type="file" id="tweet-img" name="image" accept="image/*" style="display: none; " />
                                    <input type="file" id="tweet-img" name="image" accept="image/*" style="display: none; " />
                                    <input type="submit" value="Tweet" class="tweet-a" id="tweetBtn">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <!-- first tweet end -->

                <!-- tweet showings    -->

                <%for(j=0;j<tweets.length;j++){%>

                    <div class="tweets">
                        <div class="left-clm">
                            <img src="/assets/proflieimg.jpg" class="profile-img" />
                        </div>
                        <div class="right-clm">
                            <div>
                                <strong id=""><%=tweets[j].user_name%></strong>
                                <span class="tag"><%=tweets[j].user_username%></span>
                                <span class="tweet_time"><%=tweet_create[j]%></span>
                                <a href="">
                                    <i class="bi bi-three-dots"></i>
                                </a>

                                <div class="tweets-area">
                                    <p class="tweet-text" id="tweet-text">
                                        <%=tweets[j].tweet_content%>
                                    </p>
                                    <%if(tweets[j].tweet_image){%>
                                        <img src="/upload/<%=tweets[j].tweet_image%>" class="tweet-img">
                                        <%}else if(tweets[j].tweet_video){%>
                                            <video controls>
                                                <source src="/upload/<%=tweets[j].tweet_video%>" type="video/mp4" class="tweet-video">
                                              </video>

                                            <%}%>

                                                <div class="like-icons">
                                                    <div class="icon">
                                                        <%=tweets[j].tweet_id%>
                                                            <a class="fa-solid fa-comment" id="reply" onclick="popcomment('<%=tweets[j].tweet_id%>','<%=j%>')"></a>
                                                            <span class="reply-count" id="reply-count">
                                                            <%=totalcmt[j].comment_count%>
                                                        </span>
                                                    </div>
                                                    <div class="icon">
                                                        <i href="" class="fa fa-heart" id="like<%=tweets[j].tweet_id%>" onclick="likeFunction('<%=tweets[j].tweet_id%>')"></i>
                                                        <span class="like-count" id="s<%=tweets[j].tweet_id%>">
                                                        <%=tweets[j].like_count%></span>
                                                    </div>
                                                    <div class="icon">
                                                        <i class="fa-solid fa-retweet" id="<%=tweets[j].tweet_id%>" onclick="retweet(this.id)"></i>
                                                        <span class="retweet-count" id="span<%=tweets[j].tweet_id%>">
                                                        <%=tweets[j].retweet_like_count%>
                                                    </span>
                                                    </div>
                                                </div>
                                                <div class="cmt" name="cmt-box" id="cmt-box">
                                                    <div class="cmt-enter">
                                                        <div class="head">
                                                            <h5>Type your Reply.. </h5>
                                                        </div>
                                                        <div class="cmt-content">
                                                            <form>
                                                                <div class="cmt-textarea">
                                                                    <textarea class="cmt border border-secondary" id="cmt" onblur="alertcmt('<%=tweets[j].tweet_id%>','<%=j%>')" name="cmt"></textarea>
                                                                </div>
                                                                <p id="alert"></p>
                                                                <div class="cmt-footer">
                                                                    <div class="btn1">
                                                                        <a class="far fa-grin-beam" class="emojiclk" id="emojiclk" onclick="emoji()"></a>
                                                                        <emoji-picker id="emoji" class="emoji" style="display: none;"></emoji-picker>
                                                                    </div>
                                                                    <div class="btns">
                                                                        <div class="btn3"><a class="btn btn-secondary" id="close" onclick="closecomment('<%=tweets[j].tweet_id%>','<%=j%>')">Close</a>
                                                                        </div>
                                                                        <div class="btn2" id="savecommentbtn" name="savecommentbtn">

                                                                            <!-- <input type="submit" value="Comment" id="comment"
                                                                        class="btn btn-primary"
                                                                        onclick="savecomment( <%=tweets[j].tweet_id%>)"> -->
                                                                        </div>
                                                                    </div>
                                                                    <div class="cmt-show" id="cmt-show" name="cmt-show">

                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>

                                </div>
                            </div>
                        </div>
                    </div>

                    <%}%>
            </div>
        </section>

        <!-------------------------content main ended----------------------->

        <!--------------------------rigth-side started---------------------->
        <aside class="right-side">
            <div class="search-bar">

                <div><i class="bi bi-search"></i></div>
                <input class="search" placeholder="Search Tweets" id="search-text" onkeyup="search()" />

            </div>
            <div class="search_profiles">
                <div id="search_pro">
                </div>
            </div>
            <span class="w-t-f">Who to Follow</span>



            <div class="recommand-profile">

                <%=console.log("hey",whoFollow.length)%>
                    <%for(let i =0;i<whoFollow.length;i++){%>
                        <div class="profile-btn-s">
                            <div class="left-clm-s">
                                <img src="/upload/<%=whoFollow[i].profile_image%>" class="profile-img-s" />
                            </div>
                            <div class="right-clm-s">
                                <div>
                                    <strong><%=whoFollow[i].profile_name%> </strong>
                                    <span class="tag">@<%=whoFollow[i].user_username%> </span>
                                </div>
                            </div>
                            <div class="follow-btn-s">
                                <input type='button' class="follow-a-s" id="<%=whoFollow[i].user_id%>" onclick="follow_user(`<%=whoFollow[i].user_id%>`)" value='Follow'>
                            </div>
                        </div>
                        <%}%>
            </div>



        </aside>

        <!---------------------rigth -side ended---------------------------------->
        </div>
</body>

