            <!-- content main------------------------------------------------->
            <div class="wrapper">
                <header>
                    <div class="header-container">
                        <div class="icon-frame">
                            <a href="/homePage"><img src="/assets/larr.png" alt="Left Arrow" class="const-icon"></a>
                        </div>
                        <div class="account-header">
                            <a href="" target="_top">
                                <p class="account-name">
                                    <span> <%= x.profile_name %> </span>
                                    <img src="/assets/Twitter-Verified.png" alt="Verified Badge" class="verified-badge" />
                                </p>
                            </a>
                            <small> Tweets</small>
                        </div>

                    </div>
                </header>
                <div>
                    <div class="profile">
                        <img src="/assets/banner.jpg" alt="Twitter Banner" class="twitter-banner">
                        <div class="profile-pic-container">
                            <img src="/assets/Profile.jpg" alt="Profile Picture" class="twitter-profile-picture">
                        </div>
                    </div>
                    <section class="profile-details">
                        <nav>

                            <button class="profile-botton">
                    <a href="/edit" target="_top">Edit Profile</a>
                  </button>
                        </nav>
                        <div class="profile-info">

                            <div class="account-header">
                                <a href="" target="_top">
                                    <p class="account-name">
                                        <span> <%= x.profile_name %> </span>
                                        <img src="/assets/Twitter-Verified.png" alt="Verified Badge" class="verified-badge" />
                                    </p>
                                </a>
                                <small><%= x.profile_username%></small>
                            </div>

                            <div>
                                <small class="user-name">
                                    <%= x.profile_bio %>
                                </small>


                                <% let obj = new Date(x.create_date);
                                    let month = obj.toLocaleString('default',{month:'long'});
                                    let year = obj.getFullYear();%>


                                    <div class="profile-infomation">
                                        <p class="location-name">
                                            <img src="/assets/calendar.png" alt="Verified Badge" class="const-icon" />
                                            <small> Joined <%= month + ' ' +year %> </small>
                                        </p>
                                        <p class="location-name">
                                            <img src="/assets/location.png" alt="Verified Badge" class="const-icon" />
                                            <small> <%= x.profile_location %> </small>
                                        </p>

                                    </div>


                                    <div class="user-follow">
                                        <p><strong><%= x.profile_following %></strong><span>Following</span></p>
                                        <p><strong><%= x.profile_followers %></strong> <span>Followers</span></p>
                                    </div>
                            </div>
                        </div>
                    </section>
                    <section class="section-tweets">
                        <ul class="tabs">
                            <li>
                                <div class="active" id="headTweet" onclick="divHide('tweet_top',this.id)">
                                    <p>Tweets</p>
                                </div>
                            </li>
                            <li>
                                <div class="notactive" id="headRtweet" onclick="divHide('retweet',this.id)">
                                    <p>Re-Tweets</p>
                                </div>
                            </li>
                        </ul>
                    </section>
                </div>

                <%}%>


                    <section class="content">
                        <div class="title active" id="tweet_top">
                            <%for(j=0;j<tweets.length;j++){%>

                                <div class="tweets">
                                    <div class="left-clm">
                                        <img src="/assets/proflieimg.jpg" class="profile-img" />
                                    </div>
                                    <div class="right-clm">
                                        <div>
                                            <div class='tweet-name'>



                                                <a href="" target="_top">
                                                    <p>
                                                        <h4>
                                                            <%= get_profile[0].profile_name%>
                                                        </h4>
                                                    </p>
                                                </a>
                                                <a href="" target="_top">
                                                    <small><%= get_profile[0].profile_username%></small>
                                                </a>
                                            </div>

                                            <div class="tweets-area">
                                                <p class="tweet-text" id="tweet-text">
                                                    <%=tweets[j].tweet_content%>
                                                </p>
                                                <%if(tweets[j].tweet_image){%>
                                                    <img src="/upload/<%=tweets[j].tweet_image%>" class="tweet-img">
                                                    <%}else if(tweets[j].tweet_video){%>
                                                        <video controls>
                                                        <source src="/upload/<%=tweets[j].tweet_video%>" type="video/mp4" class="tweet-video">
                                                      </video>

                                                        <%}%>

                                                            <div class="like-icons">
                                                                <div class="icon">
                                                                    <a class="fa-solid fa-comment" id="reply" onclick="popcomment('<%=tweets[j].tweet_id%>','<%=j%>')"></a>
                                                                    <span class="reply-count" id="reply-count">
                                                                    <%=totalcmt[j].comment_count%>
                                                                </span>
                                                                </div>
                                                                <div class="icon">
                                                                    <i href="" class="fa fa-heart" id="like<%=tweets[j].tweet_id%>" onclick="likeFunction('<%=tweets[j].tweet_id%>')"></i>
                                                                    <span class="like-count" id="s<%=tweets[j].tweet_id%>">
                                                                <%=tweets[j].like_count%></span>
                                                                </div>
                                                                <div class="icon">
                                                                    <i class="fa-solid fa-retweet" id="<%=tweets[j].tweet_id%>" onclick="retweet(this.id)"></i>
                                                                    <span class="retweet-count" id="span<%=tweets[j].tweet_id%>">
                                                                <%=tweets[j].retweet_like_count%>
                                                            </span>
                                                                </div>
                                                            </div>
                                                            <div class="cmt" name="cmt-box" id="cmt-box">
                                                                <div class="cmt-enter">
                                                                    <div class="head">
                                                                        <h5>Type your Reply.. </h5>
                                                                    </div>
                                                                    <div class="cmt-content">
                                                                        <form>
                                                                            <div class="cmt-textarea">
                                                                                <textarea class="cmt border border-secondary" id="cmt" onblur="alertcmt('<%=tweets[j].tweet_id%>','<%=j%>')" name="cmt"></textarea>
                                                                            </div>
                                                                            <p id="alert"></p>
                                                                            <div class="cmt-footer">
                                                                                <div class="btn1">
                                                                                    <a class="far fa-grin-beam" class="emojiclk" id="emojiclk" onclick="emoji()"></a>
                                                                                    <emoji-picker id="emoji" class="emoji" style="display: none;"></emoji-picker>
                                                                                </div>
                                                                                <div class="btns">
                                                                                    <div class="btn3"><a class="btn btn-secondary" id="close" onclick="closecomment('<%=tweets[j].tweet_id%>','<%=j%>')">Close</a>
                                                                                    </div>
                                                                                    <div class="btn2" id="savecommentbtn" name="savecommentbtn">

                                                                                        <!-- <input type="submit" value="Comment" id="comment"
                                                                                class="btn btn-primary"
                                                                                onclick="savecomment( <%=tweets[j].tweet_id%>)"> -->
                                                                                    </div>
                                                                                </div>
                                                                                <div class="cmt-show" id="cmt-show" name="cmt-show">

                                                                                </div>
                                                                            </div>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <%}%>
                        </div>
                        <div class="title in_active" id="retweet">
                            <%for(j=0;j<tweets.length;j++){%>

                                <div class="tweets">
                                    <div class="left-clm">
